<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_newWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_newWord"/>

    <EditText
        android:id="@+id/et_newWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_newMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_newMeaning"/>

    <EditText
        android:id="@+id/et_newMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_newNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_newNote"/>

    <EditText
        android:id="@+id/et_newNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCreateCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCreateNewCardButtonClick"
            android:text="@string/bt_create"/>

        <Button
            android:id="@+id/btCreateCardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCancelToCreateNewCardButtonClick"
            android:text="やめる"/>
    </LinearLayout>

</LinearLayout>